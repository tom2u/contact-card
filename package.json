  },
  "homepage": "https://github.com/tom2u/contact-card#readme",
  "dependencies": {
    "concurrently": "^7.2.1"
  },
  "engines": {
    "node": "16.x"
  },
  "heroku-prebuild": "npm install --dev"
}
